<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AffichProfil" Height="450" Width="800" Background="AntiqueWhite">
    <!-- Fenêtre de description d'une classe-->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--Nom du profil-->
        <DockPanel DockPanel.Dock="Top" Background="LightBlue" Grid.Row="0">
            <TextBlock Text="Profil 1" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Caladea" FontSize="56"/>
        </DockPanel>
        
        <!--Ajout d'un boutton pour mettre en favori-->
        <Button Content="Ajouter Favori" Height="20" Width="120" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ClickFavori"/>

        <!--Infos sur le profil-->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Description de la classe :" FontSize="20" FontFamily="Caladea" Background="AntiqueWhite"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    
                <TextBlock Text="Dés de vie et équipement :" FontSize="20" FontFamily="Caladea" Background="AntiqueWhite" Grid.Column="0"/>
                <TextBlock Text="Divers :" FontSize="20" FontFamily="Caladea" Background="AntiqueWhite" Grid.Column="1"/>
            </Grid>
            <!--Descriptif des voies du profil-->

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Voie 1" FontSize="18" TextAlignment="Center"/>
                    <ListBox>
                        <WrapPanel >
                            <TextBlock Text="Compétence 1"  Background="#FFFB6D6D" FontSize="15"/>
                        </WrapPanel>
                        <WrapPanel >
                            <TextBlock Text="Compétence 2"  Background="#FFFB6D6D" FontSize="15"/>
                        </WrapPanel>
                        <WrapPanel >
                            <TextBlock Text="Compétence 3"  Background="#FFFB6D6D" FontSize="15"/>
                        </WrapPanel>
                        <WrapPanel >
