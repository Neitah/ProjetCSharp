<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Background="AntiqueWhite"> 
  
    <DockPanel>
        
        <Grid DockPanel.Dock="Left" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
      
            <!-- Logo-->

            <DockPanel Grid.Row="0">
                <!-- Inserer le logo -->
            </DockPanel>
            
            <!-- Menu a gauche -->
 
            <ListBox  Background="LightGreen" Grid.Row="1">

                <WrapPanel Name="Profil1">
                    <TextBlock Text="Personnage 1"  Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel>

                <WrapPanel Name="Profil2">
                    <TextBlock Text="Personnage 2" Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel>

                <WrapPanel Name="Profil3">
                    <TextBlock Text="Personnage 3" Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel>

                <WrapPanel Name="Profil4">
                    <TextBlock Text="Personnage 4" Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel>

                <WrapPanel Name="Profil5">
                    <TextBlock Text="Personnage 5" Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel>

                <WrapPanel Name="Profil6">
                    <TextBlock Text="Personnage 6" Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel>

                <WrapPanel Name="Profil7">
                    <TextBlock Text="Personnage 7" Background="#FFFB6D6D" FontSize="15"/>
                    <Image Source="" MaxWidth="90"/>
                </WrapPanel> 
                
            </ListBox>
        </Grid>

        <!-- Titre de l'application -->
        
        <DockPanel DockPanel.Dock="Top" Background="LightBlue">
            <TextBlock Text="Chroniques Oubliées" FontSize="50" FontWeight="DemiBold" HorizontalAlignment="Center" FontFamily="Caladea" />
        </DockPanel>

        <!-- Description du jeu -->
     
        <Grid DockPanel.Dock="Top" Background="LightGray" Margin="10">
            <TextBlock Text="Description jeu : " FontSize="15" Margin="10"/>
        </Grid>

        <!-- Différentes boites du jeu -->

        <Grid DockPanel.Dock="Bottom" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="LightPink" Margin="10">
                <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Image Source=""  Width="50"/>
                    </Border>
                </Button>
                <TextBlock Text="Boite de jeu 1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Background="LightPink" Margin="10">
                <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Image Source=""  Width="50"/>
                    </Border>
                </Button>
                <TextBlock Text="Boite de jeu 2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Background="LightPink" Margin="10">
                <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Image Source=""  Width="50"/>
                    </Border>
                </Button>
                <TextBlock Text="Boite de jeu 3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>
        
    </DockPanel>
</Window>
