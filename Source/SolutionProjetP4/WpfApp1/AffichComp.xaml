<Window x:Class="WpfApp1.AffichComp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AffichComp" Height="400" Width="300">
    <DockPanel >
        
        <DockPanel.Background>
            <ImageBrush Stretch="Fill" ImageSource="\Images;Component\AfficheCompétence\backgroundcompetence.jpg"/>
        </DockPanel.Background>
        
        
        <DockPanel DockPanel.Dock="Top" Background="White" Grid.Row="0">
            <TextBlock Text="{Binding Nom}" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Caladea" FontSize="30"/>
        </DockPanel>
        <Border CornerRadius="10" Background="White" Margin="20" VerticalAlignment="Center">
            <DockPanel VerticalAlignment="Center" Background="White" Margin="20">
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="15" TextAlignment="Center" />
            </DockPanel>
        </Border>

    </DockPanel>
</Window>
